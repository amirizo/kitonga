# ==================================================
# KITONGA WI-FI DEVELOPMENT ENVIRONMENT
# ==================================================
# Use this for local development and testing

# ==================================================
# DJANGO CORE SETTINGS
# ==================================================

# Development secret key (change for production)
SECRET_KEY=django-insecure-kitonga-dev-key-change-in-production

# Development mode
DEBUG=True

# Allowed hosts for development
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# ==================================================
# DATABASE CONFIGURATION
# ==================================================

# SQLite for development
DATABASE_URL=sqlite:///db.sqlite3

# ==================================================
# MIKROTIK ROUTER CONFIGURATION
# ==================================================

# Enable mock mode for development (no real router needed)
MIKROTIK_MOCK_MODE=true

# ============================================
# VPS Production (via WireGuard tunnel)
# ============================================
# MIKROTIK_HOST=10.50.0.2
# MIKROTIK_PORT=8728
# MIKROTIK_USER=admin
# MIKROTIK_PASSWORD=Kijangwani2003
# MIKROTIK_USE_SSL=false

# ============================================
# Local/Offline Development (direct router IP) - ACTIVE
# ============================================
MIKROTIK_HOST=10.50.0.2
MIKROTIK_PORT=8728
MIKROTIK_USER=admin
MIKROTIK_PASSWORD=Kijangwani2003
MIKROTIK_USE_SSL=false

MIKROTIK_DEFAULT_PROFILE=default

# ==================================================
# CLICKPESA PAYMENT CONFIGURATION (SANDBOX)
# ==================================================

# ClickPesa sandbox credentials
CLICKPESA_CLIENT_ID=sandbox_client_id
CLICKPESA_API_KEY=sandbox_api_key
CLICKPESA_BASE_URL=https://api.clickpesa.com
CLICKPESA_WEBHOOK_URL=http://localhost:8000/api/clickpesa-webhook/

# ==================================================
# NEXTSMS CONFIGURATION (TEST MODE)
# ==================================================

# NextSMS test credentials
NEXTSMS_USERNAME=test_username
NEXTSMS_PASSWORD=test_password
NEXTSMS_SENDER_ID=TestSender
NEXTSMS_BASE_URL=https://messaging-service.co.tz

# Test mode enabled
IS_TEST_MODE=true

# ==================================================
# CORS AND CSRF SETTINGS
# ==================================================

# CORS for development (allow all origins)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# CSRF for development
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ==================================================
# ADMIN AUTHENTICATION
# ==================================================

SIMPLE_ADMIN_TOKEN=kitonga_admin_2025
ADMIN_TOKEN_SECRET=dev-admin-secret

# ==================================================
# WI-FI SYSTEM CONFIGURATION
# ==================================================

DAILY_ACCESS_PRICE=1000
ACCESS_DURATION_HOURS=24
MAX_DEVICES_PER_USER=1

# ==================================================
# DEVELOPMENT SETTINGS
# ==================================================

# Disable security features for development
SECURE_SSL_REDIRECT=false
SESSION_COOKIE_SECURE=false
CSRF_COOKIE_SECURE=false

# Static files
STATIC_URL=/static/
STATIC_ROOT=staticfiles

# Media files
MEDIA_URL=/media/
MEDIA_ROOT=media

# ==================================================
# LOGGING
# ==================================================

LOG_LEVEL=DEBUG
LOG_DIR=logs

# ==================================================
# TIMEZONE
# ==================================================

TIME_ZONE=Africa/Dar_es_Salaam
LANGUAGE_CODE=en-us
USE_I18N=true
USE_TZ=true
