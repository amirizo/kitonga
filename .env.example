# Kitonga Wi-Fi Billing System Environment Configuration
# Copy this file to .env and update the values for your environment

# =============================================================================
# BASIC DJANGO SETTINGS
# =============================================================================

# Set to True for development, False for production
DEBUG=True

# Django secret key - MUST be changed in production!
SECRET_KEY=django-insecure-kitonga-dev-key-change-in-production

# Allowed hosts (comma-separated, no spaces)
# For development: localhost,127.0.0.1
# For production: your-domain.com,www.your-domain.com
ALLOWED_HOSTS=localhost,127.0.0.1,api.kitonga.klikcell.com,kitonga.klikcell.com

# =============================================================================
# CORS SETTINGS
# =============================================================================

# Allowed CORS origins for production (ignored when DEBUG=True)
CORS_ALLOWED_ORIGINS=https://kitonga.klikcell.com,https://api.kitonga.klikcell.com

# =============================================================================
# PAYMENT GATEWAY CONFIGURATION
# =============================================================================

# ClickPesa Configuration
CLICKPESA_CLIENT_ID=your_clickpesa_client_id
CLICKPESA_API_KEY=your_clickpesa_api_key
CLICKPESA_BASE_URL=https://api.clickpesa.com
CLICKPESA_WEBHOOK_URL=https://your-domain.com/api/webhooks/clickpesa/

# =============================================================================
# SNIPPE PAYMENT GATEWAY CONFIGURATION
# =============================================================================

# Snippe API Key (starts with snp_)
SNIPPE_API_KEY=your_snippe_api_key_here
SNIPPE_WEBHOOK_SECRET=your_snippe_webhook_secret
SNIPPE_BASE_URL=https://api.snippe.sh/v1
SNIPPE_WEBHOOK_URL=https://your-domain.com/api/snippe-webhook

# =============================================================================
# SMS SERVICE CONFIGURATION
# =============================================================================

# NextSMS Configuration
NEXTSMS_USERNAME=your_nextsms_username
NEXTSMS_PASSWORD=your_nextsms_password
NEXTSMS_SENDER_ID=Klikcell
NEXTSMS_BASE_URL=https://messaging-service.co.tz

# Set to True for testing, False for production SMS
IS_TEST_MODE=True

# =============================================================================
# MIKROTIK ROUTER CONFIGURATION
# =============================================================================

# ============================================
# VPS Production (via WireGuard tunnel)
# ============================================
# MIKROTIK_HOST=10.50.0.2
# MIKROTIK_PORT=8728
# MIKROTIK_USER=admin
# MIKROTIK_PASSWORD=your_router_password
# MIKROTIK_USE_SSL=false

# ============================================
# Local/Offline Development (direct router IP) - ACTIVE
# ============================================
MIKROTIK_HOST=10.50.0.2
MIKROTIK_PORT=8728
MIKROTIK_USER=admin
MIKROTIK_PASSWORD=your_router_password
MIKROTIK_USE_SSL=false

MIKROTIK_SSL_VERIFY=false
MIKROTIK_DEFAULT_PROFILE=default
MIKROTIK_HOTSPOT=hotspot1

# =============================================================================
# BUSINESS CONFIGURATION
# =============================================================================

# Maximum devices per user
MAX_DEVICES_PER_USER=1

# Admin authentication token for API access
SIMPLE_ADMIN_TOKEN=kitonga_admin_2025
ADMIN_TOKEN_SECRET=your_admin_secret_here

# =============================================================================
# DEVELOPMENT vs PRODUCTION NOTES
# =============================================================================

# DEVELOPMENT (DEBUG=True):
#   - HTTP only (no HTTPS required)
#   - CORS allows all origins
#   - Less strict security settings
#   - Access via: http://localhost:8000 or http://127.0.0.1:8000
#
# PRODUCTION (DEBUG=False):
#   - HTTPS enforced
#   - Strict CORS settings
#   - Full security headers enabled
#   - Access via: https://your-domain.com
